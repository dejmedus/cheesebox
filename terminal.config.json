{
  "open": [
    { "tab": "zsh", "commands": ["*CLOSE"] },
    { "tab": "git", "commands": ["clear", "git branch"] },
    {
      "tab": "main",
      "commands": ["clear"]
    }
  ],
  "test": [
    { "tab": "test", "commands": ["clear", "python -m unittest tests/test.py"] }
  ],
  "local_package": [
    {
      "tab": "package",
      "commands": [
        "clear",
        "python setup.py sdist bdist_wheel",
        "pip install dist/cheesebox-0.0.1-py3-none-any.whl --force-reinstall",
        "cheesebox"
      ]
    }
  ],
  "setup": [
    {
      "tab": "main",
      "commands": [
        "python3 -m venv venv",
        "source venv/bin/activate",
        "pip3 install requirements.txt"
      ],
      "description": "set up the venv"
    }
  ]
}
